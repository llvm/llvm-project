load("//llvm:lit_test.bzl", "lit_test")

licenses(["notice"])

package(default_visibility = ["//visibility:public"])

[
    lit_test(
        name = "%s.test" % src,
        srcs = [src],
        data = [
            "//llvm:split-file",
            "//llvm:yaml2obj",
            "//mlir:mlir-opt",
            "//mlir:mlir-translate",
            "//mlir/test:lit_data",
        ] + glob(["Wasm/inputs/*"]),
    )
    for src in glob([
        "**/*.mlir",
        "**/*.ll",
    ])
]
