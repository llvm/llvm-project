load("//libc/test:libc_test_rules.bzl", "libc_test")

[
    libc_test(
        name = func_name + "_test",
        srcs = [
            "CImagTest.h",
            func_name + "_test.cpp",
        ],
        libc_function_deps = ["//libc:func_name".replace("func_name", func_name)],
        deps = [
            "//libc:hdr_math_macros",
            "//libc/test/UnitTest:fp_test_helpers",
        ],
    )
    for func_name in [
        "cimag",
        "cimagf",
        "cimagl",
        "cimagf128",
        "cimagf16",
    ]
]

