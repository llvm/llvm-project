        "PrintfMatcher.cpp",
    ],
    hdrs = [
        "PrintfMatcher.h",
    ],
    deps = [
        ":LibcUnitTest",
        ":string_utils",
        "//libc:__support_fputil_fp_bits",
        "//libc:printf_core_structs",
    ],
