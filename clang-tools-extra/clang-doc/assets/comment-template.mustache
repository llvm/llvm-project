{{#FullComment}}
    {{#Children}}
    {{>Comments}}
    {{/Children}}
{{/FullComment}}
{{#ParagraphComment}}
    {{#Children}}
    {{>Comments}}
    {{/Children}}
{{/ParagraphComment}}
{{#BlockCommandComment}}
    <div class="block-command-comment__command">
        <div class="block-command-command">
            {{Command}}
        </div>
        <div>
            {{#Children}}
                {{>Comments}}
            {{/Children}}
        </div>
    </div>
{{/BlockCommandComment}}
{{#TextComment}}
    <div>
        <p>{{TextComment}}</p>
    </div>
{{/TextComment}}
