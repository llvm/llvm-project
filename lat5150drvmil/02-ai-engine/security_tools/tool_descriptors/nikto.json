{
  "name": "nikto",
  "description": "Web server vulnerability scanner",
  "category": "vulnerability_scanning",
  "phase": ["analysis"],
  "command": "nikto",
  "required": false,
  "args": {
    "basic": "-h {target} -Tuning 1,2,3",
    "aggressive": "-h {target} -Tuning x",
    "quick": "-h {target} -Tuning 1"
  },
  "default_profile": "basic",
  "timeout": 600,
  "output_format": "text",
  "parse_output": true,
  "severity_keywords": {
    "critical": ["SQL injection", "command injection", "remote code", "shell"],
    "high": ["XSS", "CSRF", "authentication bypass", "directory traversal"],
    "medium": ["information disclosure", "misconfiguration", "weak"],
    "low": ["deprecated", "banner", "version disclosure"],
    "info": ["retrieved", "identified"]
  }
}
