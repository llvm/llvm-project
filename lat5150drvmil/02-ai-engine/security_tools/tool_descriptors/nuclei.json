{
  "name": "nuclei",
  "description": "Fast vulnerability scanner based on templates",
  "category": "vulnerability_scanning",
  "phase": ["analysis"],
  "command": "nuclei",
  "required": false,
  "args": {
    "basic": "-u {target} -severity critical,high,medium -silent",
    "full": "-u {target} -silent",
    "critical": "-u {target} -severity critical -silent",
    "cve": "-u {target} -tags cve -silent"
  },
  "default_profile": "basic",
  "timeout": 600,
  "output_format": "text",
  "parse_output": true,
  "severity_keywords": {
    "critical": ["[critical]", "critical severity"],
    "high": ["[high]", "high severity"],
    "medium": ["[medium]", "medium severity"],
    "low": ["[low]", "low severity"],
    "info": ["[info]", "info severity"]
  }
}
