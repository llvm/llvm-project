# Intel NPU Covert Edition Build Configuration
# Military-grade NPU optimization flags
# Source this file before building or running AI components

# NPU Performance Settings (MILITARY MODE)
export INTEL_NPU_ENABLE_TURBO=1
export NPU_MILITARY_MODE=1
export NPU_COVERT_MODE=1
export NPU_MAX_TOPS=49.4                    # Full covert edition performance (+87% over standard)
export NPU_SECURE_EXECUTION=1               # Enable secure NPU execution with cache isolation

# OpenVINO Integration
export OPENVINO_ENABLE_SECURE_MEMORY=1
export OPENVINO_HETERO_PRIORITY=NPU,GPU,CPU # Prefer NPU for inference
export OV_SCALE_FACTOR=1.5                   # Performance scaling

# Security Settings
export INTEL_NPU_SECURE_EXEC=1
export DSMIL_NPU_ATTESTATION=1              # Enable DSMIL Device 12 attestation for NPU

# Performance Monitoring
export NPU_PERFORMANCE_LOGGING=1
export NPU_BENCHMARK_MODE=0                 # 0=normal, 1=benchmark (reduces security)

# TEMPEST Compliance
export TEMPEST_ZONE=A
export TEMPEST_CERTIFIED=1

# AVX512 P-Core Pinning
export FORCE_AVX512_PCORE=1                 # Pin AVX512 operations to P-cores (0-11)
export CPU_PCORE_MASK=0x0FFF                # Bitmask for P-cores (first 12 cores)

# Hardware Acceleration Hints
export USE_NPU_FOR_WHISPER=1                # Voice UI - Whisper STT on NPU
export USE_NPU_FOR_PIPER=1                  # Voice UI - Piper TTS on NPU
export USE_GNA_FOR_WAKEWORD=1               # Voice UI - Wake word detection on GNA
export USE_AVX512_FOR_SHADOWGIT=1           # Shadowgit - AVX512 acceleration

# Agent Communication
export AGENT_COMM_USE_AVX512=1              # Binary protocol - AVX512 acceleration
export CRYPTO_POW_DIFFICULTY=20             # Proof-of-work difficulty (20 bits)

echo "âœ“ NPU Military Configuration loaded:"
echo "  NPU TOPS: $NPU_MAX_TOPS"
echo "  Military Mode: $NPU_MILITARY_MODE"
echo "  Covert Mode: $NPU_COVERT_MODE"
echo "  Secure Execution: $NPU_SECURE_EXECUTION"
echo "  AVX512 P-Core Pinning: $FORCE_AVX512_PCORE"
