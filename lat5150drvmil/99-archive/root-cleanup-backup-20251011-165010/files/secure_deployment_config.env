# DSMIL Secure Phase 2 Deployment Configuration
# Source this file before running the deployment: source secure_deployment_config.env

# Database Configuration (CRITICAL - Set actual password)
export DSMIL_DB_HOST="localhost"
export DSMIL_DB_PORT="5433"
export DSMIL_DB_NAME="claude_agents_auth"
export DSMIL_DB_USER="claude_agent"
export DSMIL_DB_PASSWORD="CHANGE_THIS_PASSWORD_IMMEDIATELY"

# Sudo Configuration
export DSMIL_USE_SUDO="false"  # Set to "true" only if passwordless sudo is configured
export DSMIL_SUDO_USER="john"

# Security Configuration
export DSMIL_ENCRYPT_LOGS="true"
export DSMIL_LOG_LEVEL="INFO"
export DSMIL_MAX_RETRIES="3"
export DSMIL_TIMEOUT="30"

# Path Configuration
export DSMIL_WORK_DIR="/home/john/LAT5150DRVMIL"
export DSMIL_TEMP_DIR="/tmp/dsmil_secure"
export DSMIL_LOG_DIR="/var/log/dsmil"

# Create required directories
mkdir -p "$DSMIL_TEMP_DIR" "$DSMIL_LOG_DIR" 2>/dev/null || true
chmod 700 "$DSMIL_TEMP_DIR" 2>/dev/null || true
chmod 755 "$DSMIL_LOG_DIR" 2>/dev/null || true

echo "ğŸ”’ DSMIL secure deployment environment configured"
echo "âš ï¸  Remember to set DSMIL_DB_PASSWORD before deployment"