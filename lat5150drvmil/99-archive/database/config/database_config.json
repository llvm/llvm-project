{
  "database": {
    "name": "DSMIL Token Testing Database",
    "version": "1.0.0",
    "sqlite": {
      "path": "data/dsmil_tokens.db",
      "pragma_settings": {
        "foreign_keys": true,
        "journal_mode": "WAL",
        "synchronous": "NORMAL",
        "cache_size": 10000,
        "temp_store": "MEMORY"
      },
      "connection_pool": {
        "max_connections": 10,
        "timeout": 30
      }
    },
    "json": {
      "directory": "data/json",
      "indent": 2,
      "ensure_ascii": false
    },
    "csv": {
      "directory": "data/csv",
      "delimiter": ",",
      "quotechar": "\"",
      "quoting": "QUOTE_MINIMAL"
    },
    "binary": {
      "directory": "data/binary",
      "format_version": 1,
      "compression": false
    }
  },
  "backup": {
    "directory": "backups",
    "retention": {
      "keep_count": 10,
      "keep_days": 30,
      "auto_cleanup": true
    },
    "compression": true,
    "verification": true,
    "schedule": {
      "enabled": false,
      "interval_hours": 24,
      "time_of_day": "02:00"
    }
  },
  "monitoring": {
    "system_metrics": {
      "enabled": true,
      "interval_seconds": 1,
      "collect_cpu": true,
      "collect_memory": true,
      "collect_disk": true,
      "collect_thermal": true
    },
    "kernel_messages": {
      "enabled": true,
      "follow_dmesg": true,
      "filter_patterns": [
        "dsmil",
        "smbios", 
        "thermal",
        "acpi",
        "dell"
      ]
    },
    "dsmil_responses": {
      "enabled": true,
      "check_interval_seconds": 2,
      "monitor_sysfs": true,
      "monitor_memory": true
    }
  },
  "integrity": {
    "checks": {
      "auto_run": true,
      "run_interval_hours": 6,
      "sqlite_integrity": true,
      "file_consistency": true,
      "data_consistency": true,
      "backup_integrity": true,
      "performance_health": true
    },
    "transactions": {
      "enabled": true,
      "timeout_seconds": 300,
      "max_concurrent": 5
    }
  },
  "analysis": {
    "pattern_detection": {
      "enabled": true,
      "confidence_threshold": 0.7,
      "cache_results": true,
      "cache_ttl_hours": 12
    },
    "thermal_correlation": {
      "enabled": true,
      "correlation_window_seconds": 30,
      "high_impact_threshold_celsius": 5.0
    },
    "reporting": {
      "auto_generate": true,
      "formats": ["json", "html"],
      "include_charts": true,
      "output_directory": "reports"
    }
  },
  "tokens": {
    "definitions": {
      "total_tokens": 72,
      "groups": 6,
      "devices_per_group": 12,
      "base_token_id": 1152,
      "hex_range_start": "0x480",
      "hex_range_end": "0x4C7"
    },
    "testing": {
      "default_access_method": "smbios-token-ctl",
      "retry_count": 3,
      "retry_delay_seconds": 1,
      "timeout_seconds": 30,
      "safety_delay_seconds": 5
    }
  },
  "thermal": {
    "monitoring": {
      "sensors": ["coretemp", "acpi", "hwmon"],
      "warning_threshold": 95,
      "critical_threshold": 100,
      "emergency_threshold": 105
    },
    "safety": {
      "emergency_stop_enabled": true,
      "cooling_delay_seconds": 60,
      "max_consecutive_warnings": 3
    }
  },
  "logging": {
    "level": "INFO",
    "file": "logs/database.log",
    "max_size_mb": 100,
    "backup_count": 5,
    "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
  },
  "paths": {
    "base_directory": "/home/john/LAT5150DRVMIL/database",
    "schema_directory": "schemas",
    "script_directory": "scripts",
    "tools_directory": "tools",
    "analysis_directory": "analysis"
  }
}