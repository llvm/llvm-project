// CHECK-NEXT:    },
// CHECK-NEXT:    "range": {
// CHECK-NEXT:      "end": {
// CHECK-NEXT:        "character": 8,
// CHECK-NEXT:        "line": 3
// CHECK-NEXT:      },
// CHECK-NEXT:      "start": {
// CHECK-NEXT:        "character": 4,
// CHECK-NEXT:        "line": 3
// CHECK-NEXT:      }
// CHECK-NEXT:    }
// CHECK-NEXT:  }
