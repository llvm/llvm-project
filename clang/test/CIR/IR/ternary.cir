// RUN: cir-opt %s | cir-opt | FileCheck %s
!u32i = !cir.int<u, 32>

module  {
  cir.func @blue(%arg0: !cir.bool) -> !u32i {
    %0 = cir.ternary(%arg0, true {
      %a = cir.const(#cir.int<0> : !u32i) : !u32i
      cir.yield %a : !u32i
    }, false {
      %b = cir.const(#cir.int<1> : !u32i) : !u32i
      cir.yield %b : !u32i
    }) : (!cir.bool) -> !u32i
    cir.return %0 : !u32i
  }
}

