	"<U0C9C><U0CC2><U0CA8><U0CCD>";/
	"<U0C9C><U0CC1><U0CB2><U0CC8>";/
	"<U0C86><U0C97><U0CB8><U0CCD><U0C9F><U0CCD>";/
	"<U0CB8><U0CC6><U0CAA><U0CCD><U0C9F><U0CC6><U0C82><U0CAC><U0CB0><U0CCD>";/
	"<U0C85><U0C95><U0CCD><U0C9F><U0CCB><U0CAC><U0CB0><U0CCD>";/
