attributes(global) subroutine assign_c_devptr(p, a)
  use __fortran_builtins, only: c_devloc => __builtin_c_devloc
  use __fortran_builtins, only: c_devptr => __builtin_c_devptr
  type (c_devptr), device :: p
  complex :: a(10)
  p = c_devloc(a(1))
end subroutine

