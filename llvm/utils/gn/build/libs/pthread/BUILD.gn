import("//llvm/utils/gn/build/libs/pthread/enable.gni")

config("pthread_config") {
  visibility = [ ":pthread" ]
  ldflags = [ "-pthread" ]
}

group("pthread") {
  # On Android, bionic has built-in support for pthreads.
  if (llvm_enable_threads && current_os != "win") {
    all_dependent_configs = [ ":pthread_config" ]
  }
}
