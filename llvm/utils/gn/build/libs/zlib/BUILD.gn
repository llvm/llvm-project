import("//llvm/utils/gn/build/libs/zlib/enable.gni")

config("zlib_config") {
  visibility = [ ":zlib" ]
  if (host_os == "win") {
    assert(zlib_path != "", "Please provide the path to zlib")
    include_dirs = [ zlib_path ]
    libs = [ "$zlib_path/zlib.lib" ]
  } else {
    libs = [ "z" ]
  }
}

group("zlib") {
  if (llvm_enable_zlib) {
    public_configs = [ ":zlib_config" ]
  }
}
