; CHECK-NEXT:    ret ptr addrspace(1) inttoptr (i16 -256 to ptr addrspace(1))
;
  %base = inttoptr i16 -1 to ptr addrspace(1)
  %gep = getelementptr i8, ptr addrspace(1) %base, i8 1
  ret ptr addrspace(1) %gep
}

