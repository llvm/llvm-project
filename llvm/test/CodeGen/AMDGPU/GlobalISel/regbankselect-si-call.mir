# Test that G_SI_CALL destination virtual register gets assigned to SGPR bank
# in regbankselect since the return address is always uniform.

---
name:            si_call_uniform_callee
legalized:       true
tracksRegLiveness: true
body:             |
  bb.0:
    liveins: $sgpr0_sgpr1

    ; CHECK-LABEL: name: si_call_uniform_callee
    ; CHECK: liveins: $sgpr0_sgpr1
    ; CHECK-NEXT: {{  $}}
    ; CHECK-NEXT: [[COPY:%[0-9]+]]:sgpr(p0) = COPY $sgpr0_sgpr1
    ; CHECK-NEXT: ADJCALLSTACKUP 0, 0, implicit-def $scc
    ; CHECK-NEXT: [[SI_CALL:%[0-9]+]]:sgpr(s64) = G_SI_CALL [[COPY]](p0), 0, csr_amdgpu
    ; CHECK-NEXT: $sgpr30_sgpr31 = COPY [[SI_CALL]](s64)
    ; CHECK-NEXT: ADJCALLSTACKDOWN 0, 0, implicit-def $scc
    ; CHECK-NEXT: S_ENDPGM 0
    %0:_(p0) = COPY $sgpr0_sgpr1
    ADJCALLSTACKUP 0, 0, implicit-def $scc
    %1:_(s64) = G_SI_CALL %0(p0), 0, csr_amdgpu
    $sgpr30_sgpr31 = COPY %1(s64)
    ADJCALLSTACKDOWN 0, 0, implicit-def $scc
    S_ENDPGM 0
