    S_BRANCH %bb.4

  bb.4:
    %8:sgpr_32 = S_ADD_U32 %4, 1, implicit-def $scc
    S_BRANCH %bb.1

  bb.5:
    %9:sgpr_32 = S_ADD_U32 %4, %3, implicit-def $scc
