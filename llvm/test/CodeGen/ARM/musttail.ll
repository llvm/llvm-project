; CHECK-NEXT:    stm r12, {r0, r1, r2, r3}
; CHECK-NEXT:    @APP
; CHECK-NEXT:    @NO_APP
; CHECK-NEXT:    add r3, sp, #8
; CHECK-NEXT:    add r0, sp, #8
; CHECK-NEXT:    add r12, r0, #16
; CHECK-NEXT:    ldm r3, {r0, r1, r2, r3}
